<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgbuttondd"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dingduong"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Dinh dưỡng cho trẻ em"
        android:id="@+id/btntreem"
        android:background="@drawable/custombutton"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/btnphunu" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Dinh dưỡng cho phụ nữ mang thai"
        android:id="@+id/btnphunu"
        android:layout_below="@+id/btntreem"
        android:background="@drawable/custombutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Dinh dưỡng cho người bệnh"
        android:background="@drawable/custombutton"
        android:id="@+id/btnngbenh"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/btnphunu"
        android:layout_alignStart="@+id/btnphunu" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Công dụng thức ăn"
        android:id="@+id/btnthucan"
        android:layout_marginTop="41dp"
        android:background="@drawable/custombutton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnngbenh"/>


</RelativeLayout>
